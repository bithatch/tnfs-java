<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent> 
		<groupId>uk.co.bithatch</groupId>
		<artifactId>tnfs-java</artifactId>
		<version>0.9.0-SNAPSHOT</version>
		<relativePath>../</relativePath> 
	</parent> 
	<artifactId>tnfs-java-daemon</artifactId>
	<name>Java TNFS - Daemon</name>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>tnfs-java-server</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>tnfs-java-server-extensions</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>tnfs-java-daemonlib</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
		</dependency>
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
        </dependency>
		<dependency>
			<groupId>com.sshtools</groupId> 
			<artifactId>porter</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sshtools</groupId>
			<artifactId>jini-config</artifactId>
		</dependency>
	</dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
					<release>17</release>
					<testRelease>17</testRelease>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>info.picocli</groupId>
                            <artifactId>picocli-codegen</artifactId>
			    			<version>4.7.7</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.1.1</version>
				<groupId>org.apache.maven.plugins</groupId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>make-assembly-tnfsjd</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>tnfsjd</finalName>
							<archive>
								<manifest>
									<mainClass>uk.co.bithatch.tnfs.daemon.TNFSDaemon</mainClass>
								</manifest>
							</archive>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
						</configuration>
					</execution>
					<execution>
						<id>make-assembly-tnfs-user</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>tnfs-user</finalName>
							<archive>
								<manifest>
									<mainClass>uk.co.bithatch.tnfs.daemon.TNFSUser</mainClass>
								</manifest>
							</archive>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<configuration>
					<includeProjectDependencies>true</includeProjectDependencies>
					<includePluginDependencies>true</includePluginDependencies>
					<mainClass>picocli.codegen.docgen.manpage.ManPageGenerator</mainClass>
					<arguments>
						<argument>--outdir=${project.build.directory}/generated-picocli-docs</argument>
						<argument>uk.co.bithatch.tnfs.daemon.TNFSDaemon</argument>
						<argument>uk.co.bithatch.tnfs.daemon.TNFSUser</argument>
					</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.asciidoctor</groupId>
				<artifactId>asciidoctor-maven-plugin</artifactId>
			</plugin>
        </plugins>
    </build>
    
    

	<profiles>

		<!-- Graal Native Image -->

		<profile>
			<id>native-image</id>
			<activation>
			 	<property>
			 	 	<name>build.native.daemon</name>
			 	 	<value>true</value>
			 	</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.graalvm.buildtools</groupId>
						<artifactId>native-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>tnfsjd-native-image</id>
								<goals>
									<goal>build</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<mainClass>uk.co.bithatch.tnfs.daemon.TNFSDaemon</mainClass>
									<skip>false</skip>
									<imageName>tnfsjd</imageName>
									<buildArgs>
										<buildArg>--install-exit-handlers</buildArg>
                                        <buildArg>-march=compatibility</buildArg>
									</buildArgs>
								</configuration>
							</execution>
							<execution>
								<id>tnfs-user-native-image</id>
								<goals>
									<goal>build</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<mainClass>uk.co.bithatch.tnfs.daemon.TNFSUser</mainClass>
									<skip>false</skip>
									<imageName>tnfs-user</imageName>
									<buildArgs>
										<buildArg>--install-exit-handlers</buildArg>
                                        <buildArg>-march=compatibility</buildArg>
									</buildArgs>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- tnfscp -->
		<profile>
			<id>tnfsjd</id>
			<activation>
				<property>
					<name>tnfsjd</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<configuration>
							<mainClass>uk.co.bithatch.tnfs.daemon.TNFSDaemmon</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- tnfs-user -->
		<profile>
			<id>tnfs-user</id>
			<activation>
				<property>
					<name>tnfs-user</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<configuration>
							<mainClass>uk.co.bithatch.tnfs.daemon.TNFSUser</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		
	</profiles>
</project>
